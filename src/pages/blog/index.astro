---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const posts = (await getCollection('blog')).sort(
	(a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<html lang="en">
	<head>
		<BaseHead title="Blog" description="All blog posts by Mahmoud Saeed" />
		<style>
			.hero {
				text-align: center;
				padding: 2em 1em;
				background: linear-gradient(to bottom, rgba(var(--gray-light), 0.5), transparent);
			}
			.hero h1 {
				font-size: 2.441em;
				margin-bottom: 0.5em;
			}
			.hero p {
				color: rgb(var(--gray-dark));
				max-width: 600px;
				margin: 0 auto;
			}
			.posts-section {
				padding: 2em 1em;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0 auto;
				padding: 0;
				max-width: 1200px;
			}
			.post-card {
				border-radius: 12px;
				overflow: hidden;
				background: white;
				box-shadow: 0 4px 12px rgba(var(--gray), 10%);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 24px rgba(var(--gray), 20%);
			}
			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			.post-content {
				padding: 1.5em;
			}
			.post-title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.3;
			}
			.post-date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.post-description {
				margin: 0.5em 0 0 0;
				color: rgb(var(--gray-dark));
			}
			@media (max-width: 720px) {
				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Blog</h1>
				<p>Thoughts on software engineering, development practices, and technical insights.</p>
			</section>
			<section class="posts-section">
				<ul class="posts-grid">
					{
						posts.map((post: any) => (
							<li>
								<a href={`/blog/${post.id}`} class="post-card">
									{post.data.heroImage && (
										<Image width={400} height={200} src={post.data.heroImage} alt="" class="post-image" />
									)}
									<div class="post-content">
										<h3 class="post-title">{post.data.title}</h3>
										<p class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</p>
										<p class="post-description">{post.data.description}</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>