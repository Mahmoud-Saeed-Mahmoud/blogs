---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";

const posts = (await getCollection("blog")).sort(
	(a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const recentPosts = posts.slice(0, 6); // Show up to 6 recent posts
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} keywords={["software developer", "backend", "frontend", "architecture", "blog", "programming", "web development"]} />
		<style>
			.hero {
				text-align: center;
				padding: 4em 1em 2em;
				background: linear-gradient(
					to bottom,
					rgba(var(--gray-light), 0.5),
					transparent
				);
			}
			.hero h1 {
				font-size: 3.052em;
				margin-bottom: 0.5em;
			}
			.hero p {
				font-size: 1.25em;
				color: rgb(var(--gray-dark));
				max-width: 600px;
				margin: 0 auto;
			}
			.posts-section {
				padding: 2em 1em;
			}
			.section-title {
				text-align: center;
				margin-bottom: 2em;
				font-size: 2.441em;
			}
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			.post-card {
				border-radius: 12px;
				overflow: hidden;
				background: white;
				box-shadow: 0 4px 12px rgba(var(--gray), 10%);
				transition:
					transform 0.2s ease,
					box-shadow 0.2s ease;
				text-decoration: none;
				color: inherit;
				display: block;
			}
			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 8px 24px rgba(var(--gray), 20%);
			}
			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
			}
			.post-content {
				padding: 1.5em;
			}
			.post-title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.3;
			}
			.post-date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.post-description {
				margin: 0.5em 0 0 0;
				color: rgb(var(--gray-dark));
			}
			.view-all {
				text-align: center;
				margin-top: 2em;
			}
			.view-all a {
				display: inline-block;
				padding: 0.75em 1.5em;
				background: var(--accent);
				color: white;
				text-decoration: none;
				border-radius: 6px;
				transition: background 0.2s ease;
				position: relative;
				overflow: hidden;
			}
			.view-all a::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
				transition: left 0.5s;
			}
			.view-all a:hover::before {
				left: 100%;
			}
			.view-all a:hover {
				background: var(--accent-dark);
			}
			@media (max-width: 720px) {
				.hero {
					padding: 2em 1em;
				}
				.hero h1 {
					font-size: 2.441em;
				}
				.hero p {
					font-size: 1.125em;
				}
				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>{SITE_TITLE}</h1>
				<p>Software Developer | Backend, Frontend & Architecture</p>
			</section>
			<section class="posts-section">
				<h2 class="section-title">Recent Posts</h2>
				<ul class="posts-grid">
					{
						recentPosts.map((post: any) => (
							<li>
								<a href={`/blog/${post.id}`} class="post-card">
									{post.data.heroImage && (
										<Image
											width={400}
											height={200}
											src={post.data.heroImage}
											alt=""
											class="post-image"
										/>
									)}
									<div class="post-content">
										<h3 class="post-title">
											{post.data.title}
										</h3>
										<p class="post-date">
											<FormattedDate
												date={post.data.pubDate}
											/>
										</p>
										<p class="post-description">
											{post.data.description}
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
				{
					posts.length > 6 && (
						<div class="view-all">
							<a href="/blog">View All Posts</a>
						</div>
					)
				}
			</section>
		</main>
		<Footer />
	</body>
</html>
